# =================================================================
# CLIENT ENVIRONMENT VARIABLES - ClickMaliClub (EXAMPLE)
# =================================================================
# Copy this file to .env and fill in your actual values
# WARNING: In React, only variables prefixed with REACT_APP_ are exposed to the browser!
# Never put sensitive server data here!

# =================================================================
# API CONFIGURATION
# =================================================================
# Backend API URL
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Environment mode
REACT_APP_ENVIRONMENT=development
REACT_APP_NODE_ENV=development

# App version
REACT_APP_VERSION=1.0.0

# =================================================================
# ANALYTICS & TRACKING (Public keys only!)
# =================================================================
# Google Analytics (measurement ID is safe to expose)
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id
REACT_APP_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Google Tag Manager
REACT_APP_GTM_ID=your_gtm_id

# Facebook Pixel
REACT_APP_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Hotjar tracking
REACT_APP_HOTJAR_ID=your_hotjar_id

# =================================================================
# EMAIL SERVICES
# =================================================================
# EmailJS (for contact forms)
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_USER_ID=your_emailjs_user_id

# =================================================================
# EXTERNAL SERVICES (Public keys only!)
# =================================================================
# Stripe Publishable Key (safe to expose)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Client ID (safe to expose)
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id

# reCAPTCHA Site Key (safe to expose)
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# =================================================================
# MAP & LOCATION SERVICES
# =================================================================
# Google Maps API Key (with domain restrictions)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =================================================================
# SOCIAL MEDIA INTEGRATION
# =================================================================
# Facebook App ID (safe to expose)
REACT_APP_FACEBOOK_APP_ID=your_facebook_app_id

# Twitter/X API Key (public)
REACT_APP_TWITTER_API_KEY=your_twitter_api_key

# Social media links
REACT_APP_INSTAGRAM_URL=https://www.instagram.com/clickmaliclub
REACT_APP_TIKTOK_URL=https://www.tiktok.com/@clickmaliclub
REACT_APP_TWITTER_URL=https://x.com/clickmaliclub
REACT_APP_TELEGRAM_URL=https://t.me/clickmaliclub
REACT_APP_PINTEREST_URL=https://pin.it/FRL5cIHPg

# =================================================================
# FEATURE FLAGS
# =================================================================
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=false
REACT_APP_ENABLE_PWA=false

# =================================================================
# UI/UX CONFIGURATION
# =================================================================
# App title and branding
REACT_APP_SITE_NAME=ClickMaliClub
REACT_APP_SITE_DESCRIPTION=Discover the best affiliate deals and opportunities

# Contact information (safe to expose)
REACT_APP_BUSINESS_EMAIL=clickmaliclub@gmail.com
REACT_APP_SUPPORT_EMAIL=support@clickmaliclub.com

# =================================================================
# ERROR TRACKING & MONITORING (Public DSN keys)
# =================================================================
# Sentry DSN (safe to expose)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# LogRocket App ID
REACT_APP_LOGROCKET_APP_ID=your_logrocket_app_id

# =================================================================
# PERFORMANCE & OPTIMIZATION
# =================================================================
# CDN URLs
REACT_APP_CDN_URL=your_cdn_url

# Image optimization
REACT_APP_IMAGE_OPTIMIZATION=true

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
# Debug mode for development
REACT_APP_DEBUG_MODE=true

# Show development tools
REACT_APP_SHOW_DEV_TOOLS=true

# Mock API responses in development
REACT_APP_MOCK_API=false

# =================================================================
# BUILD CONFIGURATION
# =================================================================
# Skip source map generation in production for security
GENERATE_SOURCEMAP=false

# Disable TypeScript checking during build (if needed)
TSC_COMPILE_ON_ERROR=true

# Bundle analyzer
REACT_APP_BUNDLE_ANALYZER=false

# =================================================================
# PWA CONFIGURATION (for future PWA features)
# =================================================================
# PWA settings
REACT_APP_PWA_SHORT_NAME=ClickMali
REACT_APP_PWA_THEME_COLOR=#36b37e
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# =================================================================
# SECURITY SETTINGS
# =================================================================
# Content Security Policy
REACT_APP_CSP_ENABLED=true

# Disable React DevTools in production
REACT_APP_DISABLE_DEVTOOLS=false
