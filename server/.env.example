# =================================================================
# SERVER ENVIRONMENT VARIABLES - ClickMaliClub (EXAMPLE)
# =================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control!

# =================================================================
# BASIC SERVER CONFIGURATION
# =================================================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/clickmaliclub
MONGODB_TEST_URI=mongodb://localhost:27017/clickmaliclub_test

# Database connection options
DB_MAX_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# =================================================================
# SECURITY & AUTHENTICATION
# =================================================================
# JWT secrets - Generate strong random strings!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session secrets
SESSION_SECRET=your_super_secure_session_secret_here_min_32_chars
COOKIE_SECRET=your_super_secure_cookie_secret_here_min_32_chars

# Password hashing
BCRYPT_ROUNDS=12

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================================================
# EMAIL SERVICES
# =================================================================
# Email provider settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# SendGrid (alternative)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun (alternative)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.com

# =================================================================
# CLOUD STORAGE
# =================================================================
# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 Configuration (alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# =================================================================
# PAYMENT PROCESSING
# =================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =================================================================
# EXTERNAL APIS
# =================================================================
# Social Media APIs
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =================================================================
# ANALYTICS & TRACKING
# =================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
GOOGLE_ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# AdSense
GOOGLE_ADSENSE_CLIENT_ID=your_adsense_client_id

# Facebook Pixel
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# =================================================================
# CACHING & PERFORMANCE
# =================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# Memory cache settings
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=100

# =================================================================
# LOGGING & MONITORING
# =================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =================================================================
# AFFILIATE TRACKING
# =================================================================
# Commission rates and settings
DEFAULT_COMMISSION_RATE=0.05
MIN_PAYOUT_AMOUNT=50.00
COMMISSION_CALCULATION_DELAY_DAYS=3

# Affiliate network APIs
AMAZON_ASSOCIATE_TAG=your_amazon_tag
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key

CLICKBANK_API_KEY=your_clickbank_api_key
COMMISSION_JUNCTION_API_KEY=your_cj_api_key

# =================================================================
# WEBHOOK ENDPOINTS
# =================================================================
# Webhook secrets for security
WEBHOOK_SECRET_STRIPE=your_stripe_webhook_secret
WEBHOOK_SECRET_PAYPAL=your_paypal_webhook_secret
WEBHOOK_SECRET_GENERAL=your_general_webhook_secret

# =================================================================
# RATE LIMITING
# =================================================================
# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# DEVELOPMENT & DEBUGGING
# =================================================================
# Debug settings
DEBUG_MODE=true
VERBOSE_LOGGING=false
ENABLE_CORS=true
TRUST_PROXY=false

# Development tools
ENABLE_API_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# =================================================================
# BUSINESS CONFIGURATION
# =================================================================
# Company information
COMPANY_NAME=ClickMaliClub
COMPANY_EMAIL=info@clickmaliclub.com
SUPPORT_EMAIL=support@clickmaliclub.com
BUSINESS_ADDRESS=Your Business Address Here

# Legal links
PRIVACY_POLICY_URL=https://clickmaliclub.com/privacy
TERMS_OF_SERVICE_URL=https://clickmaliclub.com/terms

# =================================================================
# FEATURE FLAGS
# =================================================================
# Enable/disable features
FEATURE_NEWSLETTER=true
FEATURE_USER_REGISTRATION=true
FEATURE_AFFILIATE_DASHBOARD=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true
FEATURE_CACHING=true

# =================================================================
# SSL & SECURITY
# =================================================================
# SSL settings for production
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Security headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS_CREDENTIALS=false

# =================================================================
# BACKUP & MAINTENANCE
# =================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =================================================================
# NOTIFICATION SERVICES
# =================================================================
# Slack notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#alerts

# Discord notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
